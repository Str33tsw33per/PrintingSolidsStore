@model PrintingSolidsStore.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Add Product</h1>
<div class="row center contentBox width-fit">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-norm-dark">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group text-norm-dark">
                <label asp-for="Price" class="control-label">Price: $</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group text-norm-dark">
                <label asp-for="Description" class="control-label">Description:</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <p class="form-group">
                <input type="submit" value="Create" class="btn btn-primary button-dark" />
            </p>
        </form>
    </div>
</div>

<p>
    <a class="button-dark" asp-action="Index">Back to List</a>
</p>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
