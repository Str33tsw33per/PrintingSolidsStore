@model IEnumerable<PrintingSolidsStore.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<h1>ADMIN</h1>

<table class="center contentBox">
    <thead>
        <tr class="text-subt-dark">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="text-norm-light">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a class="button-dark" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> 
                <a class="button-dark" asp-action="Details" asp-route-id="@item.ProductID">Details</a> 
                <a class="button-dark" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a class="button-dark" asp-action="Create">Create New</a>
</p>